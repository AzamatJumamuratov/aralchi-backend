// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id         Int        @id @default(autoincrement())
  title      String
  completed  Boolean    @default(false)
  createdAt  DateTime   @default(now())
  categories Category[] 
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @unique
  tasks Task[]
